@model RamaMed.Models.GastroOther
@{
    Layout = "_GastroLayout";
    ViewData["Title"] = "Investigations";
    UserData userdata = ViewBag.userData;
}

<div class="card">
    <div class="card-header text-info text-uppercase">
            <div class="m-0 p-0 pt-1 float-left"><h4>Other </h4></div>

            <div class="m-0 p-0 float-right"><a class="btn btn-outline-warning" style="text-decoration:none;" asp-action="Report">Skip</a></div>
        </div>

    <form method="post" class="card-body">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="w-100 form-group">
            <div class="border-bottom">
                <div class="row p-3">
                    <div class="col-sm-3 text-center">
                        <span class="font-weight-bold">Name : </span>@userdata.Name
                    </div>

                    <div class="col-sm-3">
                        <span class="font-weight-bold text-center">Doctor : </span>@userdata.Doctor
                    </div>

                    <div class="col-sm-3">
                        <span class="font-weight-bold text-center">UHID : </span>@userdata.UHID
                        <input asp-for="@Model.UHID" value="@userdata.UHID" hidden />
                        <span class="text-danger" asp-validation-for="UHID"></span>
                    </div>

                    <div class="col-sm-3">
                        <span class="font-weight-bold text-center">OPDNO : </span>@userdata.OPDNo
                        <input asp-for="@Model.OPDNO" value="@userdata.OPDNo" hidden />
                        <span class="text-danger" asp-validation-for="OPDNO"></span>
                    </div>
                </div>
            </div>
        </div>

        @{
            if (Model != null)
            {
                <input asp-for="@Model.ID" hidden />
                <input asp-for="@Model.CREATEDATE" hidden />
            }
            else
            {
                <div></div>
            }
        }



        <div class="w-100 form-group">
            <div class="border-bottom">
                <div class="row p-3 bg-alt-1">
                    <div class="text-uppercase font-weight-bold bg-alt-2"><label class="form-label text-center text-warning pt-2 p-1" asp-for="@Model.CLINICAL_DIAGNOSIS"></label></div>
                    <textarea asp-for="@Model.CLINICAL_DIAGNOSIS" class="w-100" rows="5"></textarea>
                </div>
                <div class="row p-3 bg-alt-2">
                    <div class="text-uppercase font-weight-bold bg-alt-1"><label class="form-label text-center text-warning pt-2 p-1" asp-for="@Model.DIFFERENTIAL_DIAGNOSIS"></label></div>
                    <textarea asp-for="@Model.DIFFERENTIAL_DIAGNOSIS" class="w-100" rows="5"></textarea>
                </div>
                <div class="row p-3 bg-alt-1">
                    <div class="text-uppercase font-weight-bold bg-alt-2"><label class="form-label text-center text-warning pt-2 p-1" asp-for="@Model.FINAL_DIAGNOSIS"></label></div>
                    <textarea asp-for="@Model.FINAL_DIAGNOSIS" class="w-100" rows="5"></textarea>
                </div>
                <div class="row p-3 bg-alt-2">
                    <div class="text-uppercase font-weight-bold bg-alt-1"><label class="form-label text-center text-warning pt-2 p-1" asp-for="@Model.TREATMENT"></label></div>
                    <textarea asp-for="@Model.TREATMENT" class="w-100" rows="5"></textarea>
                </div>
                <div class="row p-3 bg-alt-1">
                    <div class="text-uppercase font-weight-bold bg-alt-2"><label class="form-label text-center text-warning pt-2 p-1" asp-for="@Model.FOLLOW_UP"></label></div>
                    <textarea asp-for="@Model.FOLLOW_UP" class="w-100" rows="5"></textarea>
                </div>
                <div class="row p-3 bg-alt-2">
                    <div class="text-uppercase font-weight-bold bg-alt-1"><label class="form-label text-center text-warning pt-2 p-1" asp-for="@Model.REFER_TO_OTHER"></label></div>
                    <select class="form-control" asp-for="@Model.REFER_TO_OTHER">
                        <option value="">Select Department</option>
                        <option value="Basic">Basic</option>
                        <option value="Cardiology">Cardiology</option>
                        <option value="Diabetes">Diabetes</option>
                        <option value="Endricronology">Endricronology</option>
                    </select>
                </div>
            </div>
        </div>



        <div class="card-footer bg-white border-0 mr-3 py-0">
            <input class="float-right btn btn-outline-warning btn-success text-light py-3" type="submit" asp-action="OtherSave" value="Next" />
        </div>
    </form>
</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

<script>
    window.onload = function () {
        var element = document.getElementById("OS");
        element.classList.add("activelink");
    };
</script>
