@model RamaMed.Models.UserData
@{
    Layout = "_EndocrinoLayout";
    ViewData["Title"] = "Personal Detail";
}


<div class="card">
    <div class="card-header text-info text-uppercase">
        <div class="m-0 p-0 pt-1 float-left"><h4>Personal Detail</h4></div>

        <div class="m-0 p-0 float-right"><a class="btn btn-outline-warning" style="text-decoration:none;" asp-action="Clinical">Next</a></div>
    </div>
    <div class="w-100 form-group">
        <div class="border-bottom">
            <div class="row p-3">
                <div class="col-sm-3 text-center">
                    <span class="font-weight-bold">Name : </span>@Model.Name
                </div>

                <div class="col-sm-3">
                    <span class="font-weight-bold text-center">Doctor : </span>@Model.Doctor
                </div>

                <div class="col-sm-3">
                    <span class="font-weight-bold text-center">UHID : </span>@Model.UHID

                </div>

                <div class="col-sm-3">
                    <span class="font-weight-bold text-center">OPDNO : </span>@Model.OPDNo

                </div>
            </div>
        </div>
    </div>
</div>


<script>window.onload = function () {
        var element = document.getElementById("PD");
        element.classList.add("activelink");
    };</script>


