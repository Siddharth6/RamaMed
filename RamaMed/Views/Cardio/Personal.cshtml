@model RamaMed.Models.CardioPersonal
@{
    Layout = "_CardioLayout";
    ViewData["Title"] = "Cardio Personal Habits";
    UserData userdata = ViewBag.userData;
}


    <div class="card">
        <div class="card-header text-info text-uppercase">
            <div class="m-0 p-0 pt-1 float-left"><h4>Personal Habits</h4></div>

            <div class="m-0 p-0 float-right"><a class="btn btn-outline-warning" style="text-decoration:none;" asp-action="GeneralExam">Skip</a></div>
        </div>
        <form method="post" class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="w-100 form-group">
                <div class="border-bottom">
                    <div class="row p-3">
                        <div class="col-sm-3 text-center">
                            <span class="font-weight-bold">Name : </span>@userdata.Name
                        </div>

                        <div class="col-sm-3">
                            <span class="font-weight-bold text-center">Doctor : </span>@userdata.Doctor
                        </div>

                        <div class="col-sm-3">
                            <span class="font-weight-bold text-center">UHID : </span>@userdata.UHID
                            <input asp-for="@Model.UHID" value="@userdata.UHID" hidden />
                            <span class="text-danger" asp-validation-for="UHID"></span>
                        </div>

                        <div class="col-sm-3">
                            <span class="font-weight-bold text-center">OPDNO : </span>@userdata.OPDNo
                            <input asp-for="@Model.OPDNO" value="@userdata.OPDNo" hidden />
                            <span class="text-danger" asp-validation-for="OPDNO"></span>
                        </div>
                    </div>
                </div>
            </div>

            @{
            if (Model != null)
            {
                <input asp-for="@Model.ID" hidden />
                <input asp-for="@Model.CREATEDATE" hidden />
            }
            else
            {
                <div></div>
            }
        }





            <div class="px-5 py-2">
                <div class="row border-bottom">
                    <div class="col-md-4">
                        <label class="form-label text-capitalize">Smoking</label>
                    </div>
                    <div class="col-md-8">
                        <div class="row">
                            <div class="col-12">
                                <label class="form-label px-0 mb-3 col-3">
                                    <input class="mb-3 ml-3" type="radio" asp-for="@Model.SMOKING" value="Yes" />Yes
                                </label>
                                <label class="form-label px-0 col-3">
                                    <input class="mb-3 ml-3" type="radio" asp-for="@Model.SMOKING" value="No" />No
                                </label>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label" asp-for="SMOKING_PACK_YEARS">Pack Years</label>
                                <input asp-for="@Model.SMOKING_PACK_YEARS" class="form-control mb-3" placeholder="Enter Year" />
                                <span asp-validation-for="SMOKING_PACK_YEARS"></span>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label" asp-for="SMOKING_DURATION">Duration</label>
                                <input asp-for="@Model.SMOKING_DURATION" class="form-control mb-3" placeholder="Duration" />
                                <span asp-validation-for="SMOKING_DURATION"></span>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label" asp-for="SMOKING_YEARS">Years</label>
                                <input asp-for="@Model.SMOKING_YEARS" class="form-control mb-3" placeholder="Enter Year" />
                                <span asp-validation-for="SMOKING_YEARS"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="px-5 py-2">
                <div class="row border-bottom">
                    <div class="col-md-4">
                        <label class="form-label text-capitalize">Alcohol Intake</label>
                    </div>
                    <div class="col-md-8">
                        <div class="row">
                            <div class="col-12">
                                <label class="form-label px-0 mb-3 col-3">
                                    Yes<input class="mb-3 ml-3" type="radio" asp-for="@Model.ALCOHOL_INTAKE" value="Yes" />
                                </label>
                                <label class="form-label px-0 col-3">
                                    No<input class="mb-3 ml-3" type="radio" asp-for="@Model.ALCOHOL_INTAKE" value="No" />
                                </label>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label" asp-for="ALCOHOL_INTAKE_QUANTITY">Pack Years</label>
                                <input asp-for="@Model.ALCOHOL_INTAKE_QUANTITY" class="form-control mb-3" placeholder="Enter Year" />
                                <span asp-validation-for="ALCOHOL_INTAKE_QUANTITY"></span>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label" asp-for="ALCOHOL_INTAKE_DURATION">Duration</label>
                                <input asp-for="@Model.ALCOHOL_INTAKE_DURATION" class="form-control mb-3" placeholder="Duration" />
                                <span asp-validation-for="ALCOHOL_INTAKE_DURATION"></span>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label" asp-for="ALCOHOL_INTAKE_YEARS">Years</label>
                                <input asp-for="@Model.ALCOHOL_INTAKE_YEARS" class="form-control mb-3" placeholder="Enter Year" />
                                <span asp-validation-for="ALCOHOL_INTAKE_YEARS"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="px-5 py-2">
                <div class="row border-bottom">
                    <div class="col-md-4">
                        <label class="form-label text-capitalize">Other Substance Use</label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="@Model.OTHER_SUBSTANCE_USE" class="form-control mb-3" placeholder="Other Substances" />
                    </div>
                </div>
            </div>
            <div class="px-5 py-2">
                <div class="row border-bottom">
                    <div class="col-md-4">
                        <label class="form-label text-capitalize">Life style</label>
                    </div>
                    <div class="col-md-8">
                        <div class="row">
                            <div class="col-4">
                                <label>
                                    Normal
                                    <input class="ml-3" asp-for="@Model.LIFE_STYLE" type="radio" value="Normal" />
                                </label>
                            </div>
                            <div class="col-4">
                                <label>
                                    Sedentary
                                    <input class="ml-3" asp-for="@Model.LIFE_STYLE" type="radio" value="Sedentary" />
                                </label>
                            </div>
                            <div class="col-4">
                                <label>
                                    Hard-Worker
                                    <input class="ml-3" asp-for="@Model.LIFE_STYLE" type="radio" value="Hard-Worker" />
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @*<div class="card-footer bg-white border-0 mt-0 pt-0">
                <a class="ml-5 btn btn-outline-warning btn-danger text-white py-3" style="text-decoration:none" asp-action="Comorbidities">Previous</a>
                <a class="ml-1 btn btn-outline-warning btn-danger text-white py-3" style="text-decoration:none" asp-action="GeneralExam">Skip</a>
                <input class="mr-5 float-right btn btn-outline-warning btn-success text-light py-3" type="submit" asp-action="PersonalSave" value="Next" />
            </div>*@
            <div class="card-footer bg-white border-0 mr-3 py-0">
                <input class="float-right btn btn-outline-warning btn-success text-light py-3" type="submit" asp-action="PersonalSave" value="Next" />
            </div>
        </form>
    </div>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}


<script>
    window.onload = function () {
        var element = document.getElementById("PH");
        element.classList.add("activelink");
    };
</script>
